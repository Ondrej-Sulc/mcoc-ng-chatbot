datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model GlossaryCategory {
  id          String   @id
  name        String
  description String
  effects     GlossaryEffect[] @relation("GlossaryEffectToGlossaryCategory")
}

model GlossaryEffect {
  id          String   @id
  name        String
  description String
  emoji       String
  categories  GlossaryCategory[] @relation("GlossaryEffectToGlossaryCategory")
}
